<h1>Listing Indices</h1>

<div class="scf">
<table>
  <tr>
    <th></th>
    <% if is_admin_role then%>
      <th></th>
      <th></th>
    <% end %>
    <th>Group name</th>
    <th>Create order</th>
    <th>Creation sql</th>
  </tr>

<% @indices.each do |index| %>
  <tr>
    <td><%= link_to 'Show', index %></td>
    <% if is_admin_role then%>
      <td><%= link_to 'Edit', edit_index_path(index) %></td>
      <td><%= link_to 'Destroy', index, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <td><%= index.group_name %></td>
    <td><%= index.create_order %></td>
    <td><%= index.creation_sql %></td>
  </tr>
<% end %>
</table>
</div>

