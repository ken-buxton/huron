<h1>Listing Aggregates</h1>

<div class="scf">
<table>
  <tr>
    <th></th>
    <% if is_admin_role then%>
      <th></th>
      <th></th>
    <% end %>
    <th>Aggregate table name</th>
    <th>Aggregate display name</th>
    <th>Fact table name</th>
    <th>Search order</th>
    <th>Creation sql</th>
    <th>Update sql</th>
  </tr>

<% @aggregates.each do |aggregate| %>
  <tr>
    <td><%= link_to 'Show', aggregate %></td>
    <% if is_admin_role then%>
      <td><%= link_to 'Edit', edit_aggregate_path(aggregate) %></td>
      <td><%= link_to 'Destroy', aggregate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <td><%= aggregate.aggregate_table_name %></td>
    <td><%= aggregate.aggregate_display_name %></td>
    <td><%= aggregate.fact_table_name %></td>
    <td><%= aggregate.search_order %></td>
    <td><%= aggregate.creation_sql %></td>
    <td><%= aggregate.update_sql %></td>
  </tr>
<% end %>
</table>
</div>

<br />

