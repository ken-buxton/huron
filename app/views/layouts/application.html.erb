<!DOCTYPE html>
<html>
  <head>
    <title>Huron</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <!-- <%= stylesheet_link_tag    "http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.css" %> -->
    <!-- <%= javascript_include_tag "application" %> -->
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag 'favicon.ico?v4' %>
  </head>
  <body>

      <% show_nav = "yes"
      if @no_show_nav then
        show_nav = "no"
      end
      %>
      
      <% if show_nav == "yes" then %>
        <!-- background-color:#808040;  -->
	    <header id="nav" style="width:100%; height:33px; background-color:#A0A060; border: 1px solid #505028; display: block; ">
          <div>
          	<!-- color:#FF4000;  -->
          	<div style="padding-left: 5px; padding-top: 5px; ">
              <span style="font-size: 20pt; color: orange; font-weight: bold; text-decoration:underline; ">Points%</span>
              <span style="font-size: 20pt; color: orange; font-weight: bold; ">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
              <span style="font-size: 16pt; color: #FFA500; ">(Nut Box, LLC.)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            
              <% if current_user then %>
                <%= link_to "Main", '/main/index' %>
                <%= link_to "Logout", :logout%>
                <%= link_to "Edit Profile", edit_user_path(current_user.id)%>
              <% else %>
                <%= link_to "Register", new_user_path %>
                <%= link_to "Login", :login %>
              <% end %>
            </div>
          </div>
        </header>
      <% end %>
	
    <%= yield %>

  </body>
</html>
